<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/newsImage"
        android:layout_width="137dp"
        android:layout_height="202dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/round_con"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/readMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newsDate"
        android:layout_alignStart="@id/newsTitle"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:text="Read more"
        android:textColor="@color/md_theme_onBackground"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/newsDate"
        android:layout_width="154dp"
        android:layout_height="19dp"
        android:layout_below="@id/newsTitle"
        android:layout_alignStart="@id/newsTitle"
        android:layout_marginStart="0dp"
        android:layout_marginTop="4dp"
        android:text="Sat, 25 May Â· 3:30PM"
        android:textColor="#757575"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/newsTitle"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/newsImage"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@id/newsImage"
        android:text="News Title"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>
